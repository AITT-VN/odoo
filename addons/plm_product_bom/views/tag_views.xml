<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="eco_tag_view_tree" model="ir.ui.view">
        <field name="name">eco.tag.view.tree</field>
        <field name="model">eco.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"></field>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="eco_tags_action" model="ir.actions.act_window">
        <field name="name">ECO Tags</field>
        <field name="res_model">eco.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new tag
              </p>
        </field>
    </record>

</odoo>
