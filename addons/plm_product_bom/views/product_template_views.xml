<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="plm_inherit_product_template" model="ir.ui.view">
        <field name="name">plm.product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="version"></field>
            </xpath>
        </field>
    </record>

    <record id="plm_bom_inherit_module_name" model="ir.ui.view">
        <field name="name">plm.bom.view.form.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="version"></field>
            </xpath>
        </field>
    </record>
</odoo>
