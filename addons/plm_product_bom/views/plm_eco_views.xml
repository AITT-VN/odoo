<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="eco_view_form" model="ir.ui.view">
    <field name="name">plm.eco.view.form</field>
    <field name="model">plm.eco</field>
    <field name="arch" type="xml">
        <form string="Engineering Change Orders">
            <header>
                <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" invisible="state == 'new'"></field>
                <button string="Start Revision" name="action_revision" type="object" class="oe_highlight" invisible="state != 'new'"/>
                <button string="Approve" name="action_approve" type="object" class="oe_highlight" invisible="not can_approve or (can_approve and user_last_action == 'approved')"/>
                <button string="Reject" name="action_reject" type="object" class="oe_highlight" invisible="not can_approve or (can_approve and user_last_action == 'rejected')"/>
                <button string="Apply Changes" name="apply_changes" type="object" class="oe_highlight" invisible="not stage_apply_changes or state == 'done'"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_new_bom" type="object" class="oe_stat_button" icon="fa-flask" invisible="not new_bom_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Revision</span>
                        </div>
                    </button>
                </div>

                <!-- INVISIBLE FIELDS -->
                <field name="company_id" invisible="1"></field>
                <field name="new_bom_id" invisible="1"></field>
                <field name="state" invisible="1"></field>

                <!-- MAIN FIELDS -->
                <div class="oe_title">
                    <label for="name" string="Description"/>
                    <h2><field name="name"/></h2>
                </div>
                <group name="main_group">
                   <group>
                        <field name="eco_type_id" options="{'no_create': True, 'no_create_edit': True}" readonly="state != 'new'"></field>
                        <field name="apply_type" widget="radio" readonly="state != 'new'"></field>
                        <field name="product_tmpl_id" options="{'no_create': True, 'no_create_edit': True}" readonly="state != 'new'"></field>
                        <field name="bom_id" required="apply_type == 'bom'" invisible="apply_type != 'bom'" options="{'no_create': True, 'no_create_edit': True}" readonly="state != 'new'"></field>
                   </group>
                   <group>
                    <field name="user_id"></field>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>
                   </group>
                </group>
                <notebook>
                    <page name="approvals" string="Approvals">
                        <field name="approval_line_ids" readonly="1" force_save="1">
                            <list decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="approval_datetime"/>
                                <field name="stage_id"/>
                                <field name="approval_user_ids" widget="many2many_tags"/>
                                <field name="state"/>
                                <field name="approval_type"/>
                            </list>
                        </field>
                    </page>
                    <page name="bom_change" string="BOM Changes" invisible="not bom_change_line_ids">
                        <field name="bom_change_line_ids" readonly="1">
                            <list editable="bottom" decoration-success="action_type in ('update_add', 'add')" decoration-danger="action_type in ('update_remove', 'remove')">
                                <field name="action_type"></field>
                                <field name="product_id"></field>
                                <field name="quantity"></field>
                            </list>
                        </field>
                    </page>
                    <page name="note" string="Note">
                        <field name="note"></field>
                    </page>
                </notebook>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>

    <record id="eco_view_tree" model="ir.ui.view">
        <field name="name">eco.view.tree</field>
        <field name="model">plm.eco</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"></field>
            </list>
        </field>
    </record>

    <record id="plm_eco_view_kanban" model="ir.ui.view">
        <field name="name">plm.eco.view.kanban</field>
        <field name="model">plm.eco</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" quick_create="false" default_group_by="stage_id">
                <field name="name"/>
                <field name="bom_id"/>
                <field name="stage_id"/>
                <field name="apply_type"/>
                <field name="product_tmpl_id"/>
                <templates>
                    <t t-name="card" class="flex-row">
                        <main class="pe-2">
                            <div class="mb-1">
                                <div class="d-flex mb-0 h5">
                                    <field name="name"/>
                                </div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                            <span>
                                <field name="product_tmpl_id"/>
                            </span>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="eco_action" model="ir.actions.act_window">
        <field name="name">Engineering Change Orders</field>
        <field name="res_model">plm.eco</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
        <p/>
        </field>
    </record>


</odoo>
