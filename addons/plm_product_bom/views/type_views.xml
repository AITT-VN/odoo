<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="eco_type_view_tree" model="ir.ui.view">
        <field name="name">eco.type.view.tree</field>
        <field name="model">eco.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"></field>
            </list>
        </field>
    </record>

    <record id="plm_eco_type_view_kanban" model="ir.ui.view">
        <field name="name">eco.type.view.kanban</field>
        <field name="model">eco.type</field>
        <field name="arch" type="xml">
            <kanban group_create="false" create="0" can_open="0">
                <field name="name" />
                <templates>
                    <t t-name="card">
                        <div class="d-flex align-items-baseline gap-1 ms-1">
                            <div class="min-w-0 pb-4 me-2">
                                <span class="text-truncate d-block fs-4 fw-bold" t-att-title="record.display_name.value"><field name="display_name"/></span>
                            </div>
                        </div>
                        <div t-if="!selection_mode" class="row mt-3">
                                <div class="col-6">
                                    <button class="btn btn-primary" name="open_eco_action" type="object">
                                        <span>
                                            <field name="eco_count"/>
                                        <span> ECO</span>
                                        </span>
                                    </button>
                                </div>
                        </div>
                        
                    </t>
                    </templates>
            </kanban>
        </field>
    </record>
    
     <record id="plm_eco_type_action_overview" model="ir.actions.act_window">
        <field name="name">ECO Types Overview</field>
        <field name="res_model">eco.type</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new type
              </p>
        </field>
    </record>

    <record id="eco_types_action" model="ir.actions.act_window">
        <field name="name">ECO Types</field>
        <field name="res_model">eco.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new type
              </p>
        </field>
    </record>

</odoo>
