<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="eco_stage_view_tree" model="ir.ui.view">
        <field name="name">eco.stage.view.tree</field>
        <field name="model">eco.stage</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"></field>
                <field name="name"></field>
                <field name="folded"></field>
                <field name="eco_type_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="eco_stage_form_view" model="ir.ui.view">
        <field name="name">eco_stage.view.form</field>
        <field name="model">eco.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="eco_type_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"></field>
                        </group>
                        <group>
                            <field name="allow_apply_change"></field>
                            <field name="final_stage"></field>
                            <field name="folded"></field>
                        </group>
                    </group>
                    <group name="approvals" string="Approvals">
                        <field name="approval_line_ids" nolabel="1">
                            <list editable="bottom" string="Approvals">
                                <field name="name"></field>
                                <field name="user_ids" widget="many2many_tags"></field>
                                <field name="approval_type"></field>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eco_stages_action" model="ir.actions.act_window">
        <field name="name">ECO Stages</field>
        <field name="res_model">eco.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new stage
              </p>
        </field>
    </record>

</odoo>
