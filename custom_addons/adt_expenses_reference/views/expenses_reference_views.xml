<odoo>
  <data>

    <!-- Form view inherit -->
    <record id="view_hr_expense_form_inherit_reference" model="ir.ui.view">
      <field name="name">hr.expense.form.inherit.reference</field>
      <field name="model">hr.expense</field>
      <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('oe_title')]/h1" position="before">
          <h1>
            <field name="expense_code" readonly="1"/>
          </h1>
        </xpath>
      </field>
    </record>

    <record id="view_my_expenses_tree_add_number" model="ir.ui.view">
      <field name="name">hr.expense.tree.inherit.my_expenses.add_number</field>
      <field name="model">hr.expense</field>
      <field name="inherit_id" ref="hr_expense.view_my_expenses_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//list/field[1]" position="before">
          <field name="expense_code" string="Number"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>





