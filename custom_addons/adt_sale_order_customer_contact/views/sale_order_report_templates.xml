<odoo>
  <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@t-field='doc.partner_invoice_id']" position="after">
      <p>
        <span class="fa fa-mobile fa-fw"/>
        <span t-field="doc.partner_invoice_id.mobile"/>
      </p>
    </xpath>
    <xpath expr="//div[@t-field='doc.partner_shipping_id']" position="after">
      <p>
        <span class="fa fa-mobile fa-fw"/>
        <span t-field="doc.partner_shipping_id.mobile"/>
      </p>
    </xpath>
  </template>
</odoo>
