<odoo>
    <data>
        <record id="view_out_invoice_tree_inherit_custom" model="ir.ui.view">
            <field name="name">account.move.out.invoice.tree.inherit.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//list" position="inside">
                    <field name="invoice_user_id" string="Nhân viên bán hàng" />
                    <field name="payment_date_display" string="Ngày thanh toán" />
                    <field name="recipient_bank_account_display" string="Ngân hàng nhận" />
                    <field name="amount_paid" widget="monetary" string="Số tiền đã thu" />
                    <field name="amount_residual" widget="monetary" string="Số tiền phải thu" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>